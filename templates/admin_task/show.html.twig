{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>IsCompleted</th>
                <td>{{ task.isCompleted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Mode</th>
                <td>{{ task.mode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_task_index') }}">back to list</a>

    <a href="{{ path('app_admin_task_edit', {'id': task.id}) }}">edit</a>

    {{ include('admin_task/_delete_form.html.twig') }}
{% endblock %}
